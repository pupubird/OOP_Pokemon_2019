<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" fx:controller="Program.GameOverPageController"
      spacing="10.0" xmlns="http://javafx.com/javafx/10.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:id="GameOverPagePane"
>
    <ImageView fx:id="menuLogo" preserveRatio="true">
        <Image url="@assets/pokemonLogo.png" />
    </ImageView>
    <HBox alignment="CENTER">
        <Button fx:id="returnButton" mnemonicParsing="false"
                style="-fx-background-color: linear-gradient(orange,darkorange); -fx-translate-x: 18;"
                text="Game Over" textFill="WHITE"
                onMouseClicked="#navigateToMenuPage"
        >
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
        <ImageView  fx:id="returnButtonImage" preserveRatio="true">
            <Image url="@assets/pokemon3.png" />
        </ImageView>
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0" />
</VBox>
